<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:cardView="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_createEvent"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:id="@+id/sv_createEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_createEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            cardView:cardElevation="1.5dp"
            cardView:cardPreventCornerOverlap="true"
            cardView:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:id="@+id/focus_thief"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp">

                    <FrameLayout
                        android:id="@+id/flTitleContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvTitleLimit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right|bottom"
                            android:layout_margin="16dp"
                            android:textColor="@color/text_subtitle"
                            android:visibility="invisible"/>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tilTitleContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/etTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/label_title"
                                android:maxLength="30"
                                android:maxLines="1"
                                android:paddingRight="32dp"/>
                        </android.support.design.widget.TextInputLayout>
                    </FrameLayout>

                    <RelativeLayout
                        android:id="@+id/llCategoryIconContainer"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_below="@id/flTitleContainer"
                        android:background="@color/category_icon_one">

                        <ImageView
                            android:id="@+id/ivCategoryIcon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_centerInParent="true"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rect_grad"
                            android:gravity="bottom"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Change"
                                android:textColor="@color/white"
                                android:textSize="10sp"/>

                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/llTypeContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/flTitleContainer"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_toRightOf="@id/llCategoryIconContainer"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cbType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-6dp"
                            android:text="This is a secret plan"
                            android:textColor="@color/text_subtitle"/>

                        <net.steamcrafted.materialiconlib.MaterialIconView
                            android:id="@+id/mivInfo"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="8dp"
                            android:scaleType="center"
                            app:materialIcon="information_outline"
                            app:materialIconColor="@color/dark_grey"
                            app:materialIconSize="18dp"/>

                    </LinearLayout>

                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:id="@+id/mivTime"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/llTypeContainer"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_toRightOf="@id/llCategoryIconContainer"
                        android:scaleType="center"
                        app:materialIcon="clock"
                        app:materialIconColor="@color/accent"
                        app:materialIconSize="18dp"/>

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/llTypeContainer"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_toRightOf="@id/mivTime"
                        android:text="7:00 PM"
                        android:textColor="@color/accent"/>

                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:id="@+id/mivDay"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/llTypeContainer"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_toRightOf="@id/tvTime"
                        android:scaleType="center"
                        app:materialIcon="calendar"
                        app:materialIconColor="@color/accent"
                        app:materialIconSize="18dp"/>

                    <TextView
                        android:id="@+id/tvDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/llTypeContainer"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_toRightOf="@id/mivDay"
                        android:text="TODAY"
                        android:textColor="@color/accent"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp">

                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:id="@+id/mivDescription"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:scaleType="center"
                        app:materialIcon="note_text"
                        app:materialIconColor="@color/accent"
                        app:materialIconSize="24dp"/>

                    <EditText
                        android:id="@+id/etDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@id/mivDescription"
                        android:hint="Description"
                        android:maxLines="2"
                        android:textSize="16sp"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <net.steamcrafted.materialiconlib.MaterialIconView
                            android:id="@+id/mivLocation"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:scaleType="center"
                            app:materialIcon="map_marker_radius"
                            app:materialIconColor="@color/accent"
                            app:materialIconSize="24dp"/>

                        <EditText
                            android:id="@+id/etLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@id/mivLocation"
                            android:hint="Location"
                            android:textSize="16sp"/>

                    </RelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvLocationSuggestions"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="16dp"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</LinearLayout>
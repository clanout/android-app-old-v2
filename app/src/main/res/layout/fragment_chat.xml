<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_fragment_chat"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    </android.support.design.widget.AppBarLayout>


    <TextView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:id="@+id/tv_fragment_chat_no_session"
    android:gravity="center_vertical|center_horizontal"/>

    <LinearLayout
        android:id="@+id/ll_fragment_chat_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal">
    <ProgressBar
        android:id="@+id/pb_fragment_chat"
        android:layout_width="48dp"
        android:layout_height="48dp"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_fragment_chat_main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#ECEFF1">

        <Button
            android:id="@+id/b_chat_fragment_load_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BDBDBD"
            android:text="Load Previous Messages"
            android:textColor="@color/text_title"
            android:alpha="0.5"
            style="@style/Base.Widget.AppCompat.Button.Small"/>

        <ListView
            android:id="@+id/lv_chat_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:layout_weight="1"
            android:divider="@null"
            android:listSelector="@android:color/transparent"
            android:transcriptMode="alwaysScroll"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/et_chat_fragment_type_message_chat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:autoText="true"
            android:textSize="16sp"
            android:hint="Write a Message"
            android:textColor="@color/text_title"
            android:layout_gravity="bottom"
            android:background="@android:color/transparent"/>

        <net.steamcrafted.materialiconlib.MaterialIconView
            android:id="@+id/ib_fragment_chat_send"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="center"
            app:materialIcon="send"
            app:materialIconColor="@color/accent"
            app:materialIconSize="36dp"
            />

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

    <TextView
        android:id="@+id/tv_alert_dialog_invitation_response_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/invitation_response_title"
        android:textColor="@color/_text_title"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/et_alert_dialog_invitation_response_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_alert_dialog_invitation_response_title"
        android:layout_marginTop="16dp"
        android:textColor="@color/text_subtitle"
        android:textSize="14sp"/>

    <ListView
        android:id="@+id/lv_alert_dialog_invitation_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_alert_dialog_invitation_response_message"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
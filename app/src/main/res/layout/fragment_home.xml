<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Create Clan -->
        <RelativeLayout
            android:id="@+id/rlCreateOverlay_dummy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#77000000"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvSuggestion_dummy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Loose Control"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <net.steamcrafted.materialiconlib.MaterialIconView
                android:id="@+id/mivSuggestionCategory_dummy"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvSuggestion_dummy"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:scaleType="center"
                app:materialIcon="martini"
                app:materialIconColor="@color/whity"
                app:materialIconSize="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mivSuggestionCategory_dummy"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="Make a Plan"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </RelativeLayout>

        <!-- Main Content -->
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/srlFeed"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Feed -->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvFeed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background_default"/>

                <!-- No Events -->
                <TextView
                    android:id="@+id/tvNoEvents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/home_no_events"
                    android:textColor="@color/text_title"
                    android:textSize="18sp"
                    android:visibility="gone"/>

                <!-- Server Error -->
                <TextView
                    android:id="@+id/tvServerError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/home_events_fetch_error"
                    android:textColor="@color/text_title"
                    android:textSize="18sp"
                    android:visibility="gone"/>

                <!-- Loading -->
                <ProgressBar
                    android:id="@+id/loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>

            </RelativeLayout>
        </android.support.v4.widget.SwipeRefreshLayout>

    </LinearLayout>

</LinearLayout>
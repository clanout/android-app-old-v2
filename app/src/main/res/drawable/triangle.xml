<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:drawable="@drawable/com_facebook_profile_picture_blank_portrait">
    </item>
    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="10"
            android:pivotX="280%"
            android:pivotY="20%" >
            <shape
                android:shape="rectangle" >
                <solid android:color="#77000000" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="10"
            android:pivotX="200%"
            android:pivotY="10%" >
            <shape
                android:shape="rectangle" >
                <solid android:color="#ffffff" />
            </shape>
        </rotate>
    </item>
</layer-list>